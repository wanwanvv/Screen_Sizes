<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.aoge.skillexchange.FirstLoginActivity"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/balck2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:textSize="16sp"/>

    </LinearLayout>
    <TextView
        android:id="@+id/txt_welcome"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Welcome to EX!"
        android:textSize="48sp"
        android:fontFamily="casual"
        android:textColor="@color/colorAccent" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/balck5"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="16sp"/>

    </LinearLayout>
    <com.example.aoge.skillexchange.CircleImageButton
        android:id="@+id/img_headportrait"
        android:layout_gravity="center"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:onClick="selectHead" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/balck4"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >


        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/gender"
            android:textSize="20sp"
            android:layout_gravity="center"
            />

        <RadioGroup
            android:id="@+id/sex"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/nan"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:checked="true"
                android:gravity="center"
                android:text="@string/male"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/nv"
                android:layout_marginLeft="20dp"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:checked="false"
                android:text="@string/female"
                android:textSize="20sp" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/black3"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/txt_can"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="You  can : "
            android:textSize="20sp"
            />

        <EditText
            android:id="@+id/edt_can"

            android:layout_width="267dp"
            android:layout_height="34dp"
            android:background="@drawable/editsharp"

            android:hint=" enter your skills"
            android:inputType="textEmailAddress"
            android:maxLength="70"
            android:padding="0dp"
            android:singleLine="true"
            android:textColor="@color/hint1"
            android:textColorHint="@color/hint1"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:text=""
            android:textColor="#110d0a"
            android:textSize="16sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/txt_want"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="You want:"
            android:textSize="20sp"
            />

        <EditText
            android:id="@+id/edt_want"
            android:layout_width="267dp"
            android:layout_height="34dp"

            android:background="@drawable/editsharp"

            android:hint=" enter what you want to learn"
            android:inputType="textEmailAddress"
            android:maxLength="70"
            android:padding="0dp"
            android:singleLine="true"
            android:textColor="@color/hint1"
            android:textColorHint="@color/hint1"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/balck"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >

        <Button
            android:id="@+id/btnjoinus"

            android:layout_width="360dp"
            android:layout_height="50dp"
            android:background="@drawable/editbutton"
            android:onClick="btnJoinUs"
            android:text="@string/action_join_us_short"
            android:textColor="@android:color/white" />

    </LinearLayout>





</LinearLayout>
